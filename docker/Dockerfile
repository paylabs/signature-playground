FROM nginx:1.27-alpine

# Copy SSL certs generated by Jenkins pipeline
COPY docker/certs/sign.play.pem /etc/nginx/certs/sign.play.pem
COPY docker/certs/sign.play-key.pem /etc/nginx/certs/sign.play-key.pem

# Copy Nginx config
COPY docker/nginx.conf /etc/nginx/conf.d/default.conf

# Copy built web app (optional)
COPY dist /usr/share/nginx/html

EXPOSE 443
CMD ["nginx", "-g", "daemon off;"]
